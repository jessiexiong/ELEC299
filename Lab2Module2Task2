#include <Arduino_LSM6DS3.h> 

/*This example reads the acceleration values from the LSM6DS3
sensor and continuously prints them to the Serial Monitor
or Serial Plotter.
*/
long time = 0;

//initialize acceleration variables 
  float x, y, z;
  float a, b, c;
  
void setup() {
  
  Serial.begin(9600);
  
  //read acceleration
  while (!Serial);

  if (!IMU.begin()) {
    Serial.println("Failed to initialize IMU!");

    while (1);
  }

  Serial.print("Accelerometer sample rate = ");
  Serial.print(IMU.accelerationSampleRate());
  Serial.println(" Hz");
  Serial.println();
  Serial.println("Acceleration in m/s^2");
  Serial.println("X Y Z");

  Serial.print("Gyroscope sample rate = ");
  Serial.print(IMU.gyroscopeSampleRate());
  Serial.println(" Hz");
  Serial.println();
  Serial.println("Gyroscope in degrees/second");
  Serial.println("A B C");
}

void loop() {
 
  if (IMU.accelerationAvailable()) {
    IMU.readAcceleration(x, y, z);
    time = millis();

  //convert Gs to m/s^2
  x = x*9.8;
  y = y*9.8;
  z = z*9.8;

  Serial.print(x);
  Serial.print('\t');
  Serial.print(y);
  Serial.print('\t');
  Serial.println(z);
  Serial.print('\t');
  }
  
  if (IMU.gyroscopeAvailable()) {
    IMU.readGyroscope(a, b, c);

    Serial.print(a);
    Serial.print('\t');
    Serial.print(b);
    Serial.print('\t');
    Serial.println(c);
}
}
float getvelocity(float i, long time)
{
  //calculate velocity by integrating acceleration 
  float velocity = i*time; 
  return velocity;
}

float getposition(float i, long time)
{
  //get position by integrating velocity
  float Velocity = i*time;
  float Position = ((i*(time*time))/2);
  return Position;
}
