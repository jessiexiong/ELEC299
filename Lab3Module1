int inPinL = 10;
int valL = 0;
int inPinR = 11;
int valR = 0;


void setup()
{
  //initialize pushbutton
  pinMode(inPinL, INPUT); 

  pinMode(inPinR, INPUT); 
  
  Serial.begin(9600);
  Serial.println("setup");

  WaitButtonL();
  //WaitButtonR();
}

void loop()
{
  /*
  Forward();
  ReactBumpers();
  */
}

