void WaitButtonL(){
    Serial.println("waitbuttonl");
  while(1)
  {
    valL = digitalRead(inPinL);  // read input value
    if (valL == LOW) {  
        valL = digitalRead(inPinL);  // read input value       
            if (valL==HIGH)
            {
              return; // check if the input is HIGH (button released)
            }
  } 
  }
}

